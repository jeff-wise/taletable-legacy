<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlNormal">@color/dark_theme_light_grey_17</item>
        <item name="colorControlActivated">@color/dark_theme_light_grey_17</item>
        <item name="colorControlHighlight">#876333</item>
        <item name="colorSwitchThumbNormal">@color/dark_theme_light_grey_17</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/dark_blue_hlx_7</item>
        <item name="colorPrimaryDark">@color/dark_blue_hlx_7</item>
        <item name="colorAccent">@color/dark_blue_hlx_7</item>
        <item name="colorControlNormal">@color/dark_blue_hlx_7</item>
        <item name="colorControlActivated">@color/dark_blue_hlx_7</item>
        <item name="colorControlHighlight">@color/dark_blue_hlx_7</item>
        <item name="colorSwitchThumbNormal">@color/dark_blue_hl_8</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="SwitchStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_blue_hlx_7</item>
        <item name="colorPrimaryDark">@color/dark_blue_hlx_7</item>
        <item name="colorAccent">@color/dark_blue_hlx_7</item>
        <item name="colorControlNormal">@color/dark_blue_hlx_7</item>
        <item name="colorControlActivated">@color/dark_blue_hlx_7</item>
        <item name="colorControlHighlight">@color/dark_blue_hlx_7</item>
        <item name="colorSwitchThumbNormal">@color/dark_blue_hl_8</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/dark_blue_hlx_7</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/dark_blue_hl_5</item>
        <!--dialog background-->
        <!--<item name="android:windowBackground">@drawable/bg_alert_dialog</item>-->
        <item name="colorSwitchThumbNormal">@color/dark_blue_hl_8</item>
    </style>

</resources>
