<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:contentInsetStart="0dp"
                android:elevation="3dp"
                android:theme="@style/AppTheme.NoActionBar" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <ImageButton
                            android:id="@+id/toolbar_close_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_centerVertical="true"
                            android:background="#00000000"
                            android:src="@drawable/ic_toolbar_close"
                            android:tint="@color/dark_theme_primary_15" />

                        <TextView
                            android:id="@+id/toolbar_title"
                            android:layout_gravity="start"
                            android:textSize="18sp"
                            android:textColor="@color/light_theme_dark_grey_10"
                            android:text="@string/new_session"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toRightOf="@id/toolbar_close_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageButton
                            android:id="@+id/toolbar_search_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_toolbar_search"
                            android:tint="@color/dark_theme_primary_15" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/toolbar_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>


            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/content"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_theme_light_blue_grey_9">
                </LinearLayout>


                <!--<android.support.design.widget.FloatingActionButton-->
                    <!--android:id="@+id/fab"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="16dp"-->
                    <!--android:clickable="true"-->
                    <!--android:visibility="gone"-->
                    <!--android:src="@drawable/ic_fab_check"-->
                    <!--app:layout_anchor="@id/content"-->
                    <!--app:layout_anchorGravity="bottom|end"-->
                    <!--app:backgroundTint="@color/light_theme_green"-->
                    <!--app:rippleColor="#FFF" />-->


                <android.support.design.button.MaterialButton
                    android:id="@+id/fab"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="24dp"
                    android:elevation="6dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/done"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:backgroundTint="@color/light_theme_green_tint_1"
                    app:cornerRadius="32dp"
                    app:icon="@drawable/ic_fab_check"
                    app:iconPadding="12dp"
                    app:iconSize="24dp"
                    app:iconTint="@android:color/white"
                    app:layout_anchor="@+id/bottomAppBar"
                    app:layout_anchorGravity="top|center" />

            </android.support.design.widget.CoordinatorLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
