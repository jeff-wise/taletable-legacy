<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/dictionary_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dark_blue_5">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/dark_blue_9"
                android:theme="@style/AppTheme.NoActionBar" >

                <TextView
                    android:id="@+id/page_title"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/dark_blue_hlx_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/value_set_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/button_new_value_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:src="@drawable/ic_dictionary_new_value_set"
                    app:layout_anchor="@id/value_set_list_view"
                    app:layout_anchorGravity="bottom|right"
                    app:backgroundTint="@color/green_hlx_5"
                    app:rippleColor="#FFF" />

            </android.support.design.widget.CoordinatorLayout>



        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
