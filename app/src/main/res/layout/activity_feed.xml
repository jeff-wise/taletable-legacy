<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:contentInsetStart="0dp"
                android:theme="@style/AppTheme.NoActionBar" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/toolbar_main_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:background="#00000000"
                        android:src="@drawable/ic_toolbar_sheet_app_menu"
                        android:tint="@color/dark_theme_primary_15" />

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/dark_theme_primary_15"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/toolbar_options_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_toolbar_options"
                        android:tint="@color/dark_theme_primary_15" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>


            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/content"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_theme_light_grey_8">
                </LinearLayout>


                <!--<android.support.design.widget.FloatingActionButton-->
                    <!--android:id="@+id/fab"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="16dp"-->
                    <!--android:clickable="true"-->
                    <!--android:src="@drawable/ic_fab_add"-->
                    <!--app:layout_anchor="@id/content"-->
                    <!--app:layout_anchorGravity="bottom|end"-->
                    <!--app:backgroundTint="@color/light_theme_green"-->
                    <!--app:rippleColor="#FFF" />-->



                <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
                    xmlns:rfal="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    rfal:rfal_frame_color="#F3F3F3"
                    rfal:rfal_frame_alpha="0.8">

                    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
                        xmlns:rfab="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:padding="8dp"
                        rfab:rfab_size="normal"
                        rfab:rfab_drawable="@drawable/ic_fab_forward"
                        rfab:rfab_color_normal="#3A3A3A"
                        rfab:rfab_color_pressed="#263238"
                        rfab:rfab_shadow_radius="7dp"
                        rfab:rfab_shadow_color="#999999"
                        rfab:rfab_shadow_dx="0dp"
                        rfab:rfab_shadow_dy="5dp"
                        />

                </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>


            </android.support.design.widget.CoordinatorLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/left_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white" />


</android.support.v4.widget.DrawerLayout>
