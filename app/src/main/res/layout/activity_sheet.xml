    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fitsSystemWindows="true"
        android:id="@+id/coordinator_layout" >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:background="@color/transparent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:contentInsetStart="0dp"
                android:theme="@style/AppTheme.NoActionBar" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_session_button"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/toolbar_menu_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="7dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:background="#00000000"
                            android:src="@drawable/ic_toolbar_chevron_down" />

                        <TextView
                            android:id="@+id/toolbar_title"
                            android:layout_gravity="start"
                            android:textSize="18sp"
                            android:textColor="@color/light_theme_dark_grey_10"
                            android:text="@string/new_session"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/toolbar_menu_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/toolbar_options_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="7dp"
                            android:layout_centerVertical="true"
                            android:paddingTop="2dp"
                            android:background="#00000000"
                            android:src="@drawable/ic_toolbar_options" />

                    </RelativeLayout>

                    <com.taletable.android.lib.ui.CustomTabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:tabGravity="fill"
                        app:tabMode="scrollable"
                        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
                        app:tabTextColor="@color/dark_blue_hl_8"
                        app:tabSelectedTextColor="@color/dark_blue_hlx_5"
                        app:tabIndicatorColor="@color/dark_blue_hl_1" />


                </LinearLayout>

            </android.support.v7.widget.Toolbar>


            <!--<View-->
                <!--android:layout_width="match_parent"-->
