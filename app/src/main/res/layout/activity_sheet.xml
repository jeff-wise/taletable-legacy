<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/dark_blue_11"
                android:theme="@style/AppTheme.NoActionBar" >

                <TextView
                    android:id="@+id/page_title"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/dark_blue_hlx_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.Toolbar>

            <com.kispoko.tome.util.ui.CustomTabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_blue_11"
                app:tabGravity="fill"
                app:tabMode="scrollable"
                app:tabTextColor="@color/dark_blue_hl_8"
                app:tabSelectedTextColor="@color/dark_blue_hlx_8"
                app:tabIndicatorColor="@color/dark_blue_hl_1" />

            <android.support.v4.view.ViewPager
                android:id="@+id/page_pager"
                android:background="@color/dark_blue_7"
                android:layout_width="match_parent"
                android:focusableInTouchMode="true"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:background="@color/dark_blue_11"
                app:itemBackground="@color/dark_blue_11"
                app:itemIconTint="@drawable/bottom_nav_colors"
                app:itemTextColor="@drawable/bottom_nav_colors"
                app:menu="@menu/bottom_navigation" />

        </LinearLayout>



    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/dark_blue_11" />

</android.support.v4.widget.DrawerLayout>
