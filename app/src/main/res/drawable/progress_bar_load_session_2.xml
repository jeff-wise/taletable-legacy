<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#6ACA8E"
                android:centerColor="#6ACA8E"
                android:centerY="0.75"
                android:endColor="#6ACA8E"
                android:angle="270"
                />

            <corners
                android:radius="4dp" >
            </corners>

        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#1887C0"
                    android:centerColor="#1887C0"
                    android:centerY="0.75"
                    android:endColor="#1887C0"
                    android:angle="270"
                    />

            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#45BD72"
                    android:centerColor="#45BD72"
                    android:centerY="0.75"
                    android:endColor="#45BD72"
                    android:angle="270"
                    />

                <corners
                    android:radius="4dp" >
                </corners>

            </shape>
        </clip>
    </item>

</layer-list>