<?xml version="1.0" encoding="utf-8"?>

<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="2000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1000" >

    <shape
        android:innerRadius="22dp"
        android:shape="ring"
        android:thickness="2dp"
        android:useLevel="false" >

        <size
            android:height="50dp"
            android:width="50dp" />

        <gradient
            android:centerColor="#70B7D3"
            android:centerY="0.5"
            android:endColor="#E7F3F8"
            android:startColor="#1187B5"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>