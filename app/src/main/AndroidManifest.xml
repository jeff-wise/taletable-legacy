<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kispoko.tome">

<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity
        android:name=".activity.LaunchActivity"
        android:theme="@style/AppTheme.NoActionBar" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity
        android:name=".activity.SheetActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar"
        android:windowSoftInputMode="adjustResize">
    </activity>

    <activity
        android:name=".activity.ManageSheetsActivity"
        android:label="Characters"
        android:theme="@style/AppTheme.NoActionBar"
        android:windowSoftInputMode="adjustPan" />

    <activity
        android:name=".activity.EditActivity"
        android:theme="@style/AppTheme.NoActionBar"
        android:label="Edit" />

    <activity
        android:name=".activity.NewCharacterActivity"
        android:theme="@style/AppTheme.NoActionBar"
        android:label="New Character" />

    <activity
        android:name=".activity.TemplatesActivity"
        android:theme="@style/AppTheme.NoActionBar"
        android:label="Choose Template" />

    <activity
        android:name=".activity.GamesActivity"
        android:theme="@style/AppTheme.NoActionBar"
        android:label="Choose Template" />

    <activity
        android:name=".activity.SummationActivity"
        android:theme="@style/AppTheme.NoActionBar"
        android:label="Summation" />


</application>

</manifest>
