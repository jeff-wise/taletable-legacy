<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kispoko.tome">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.LaunchActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SheetActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity
            android:name=".activity.EditActivity"
            android:label="Edit" />

        <activity
            android:name=".activity.NewCharacterActivity"
            android:label="Create New Character" />

        <activity
            android:name=".activity.ChooseTemplateActivity"
            android:label="Choose Template" />

        <activity
            android:name=".activity.ChooseTemplateGameActivity"
            android:label="Choose Template" />


    </application>

</manifest>